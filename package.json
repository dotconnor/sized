{
  "name": "sized",
  "version": "1.1.1",
  "description": "Calculate the size of files/directories",
  "main": "lib/index.js",
  "repository": "dotconnor/sized",
  "author": "Connor Love <connor@dotconnor.com>",
  "license": "MIT",
  "bin": {
    "sized": "bin/sized"
  },
  "keywords": [
    "file",
    "files",
    "size",
    "cli"
  ],
  "scripts": {
    "prepublishOnly": "yarn build",
    "clean": "rm -rf ./lib/*",
    "build": "tsc",
    "test": "nyc ava --verbose",
    "lint": "eslint '**/*.ts'"
  },
  "types": "lib",
  "files": [
    "bin/**/*",
    "lib/**/*",
    "index.d.ts",
    "readme.md",
    "LICENSE"
  ],
  "dependencies": {
    "log-update": "^3.2.0",
    "minimatch": "^3.0.4",
    "ora": "^3.0.0",
    "p-limit": "^2.0.0",
    "yargs": "^13.2.4",
    "update-notifier": "^3.0.0"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/minimatch": "^3.0.3",
    "@types/node": "^12.0.3",
    "@types/update-notifier": "^2.2.0",
    "@types/yargs": "^13.0.0",
    "@typescript-eslint/eslint-plugin": "1.12.0",
    "@typescript-eslint/parser": "1.13.0",
    "ava": "^2.2.0",
    "codecov": "^3.1.0",
    "eslint": "5.16.0",
    "eslint-config-a1motion": "^1.2.0",
    "jest": "^24.8.0",
    "nyc": "^14.1.1",
    "ts-node": "^8.2.0",
    "typescript": "^3.5.1"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "np": {
    "contents": "lib"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "reporter": [
      "lcov",
      "text"
    ]
  }
}
